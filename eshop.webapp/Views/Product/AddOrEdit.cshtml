@model Product
@{
  ViewBag.Title = "AddOrEdit";
}

<h3>Product Create</h3>

<br/><br />
  <div class="form-body">
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.IdProducto)

      <div class="form-group">
        @Html.LabelFor(model => model.CodProducto)
        @Html.EditorFor(model => model.CodProducto)
        @Html.ValidationMessageFor(model => model.CodProducto)
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.Marca)
        @Html.EditorFor(model => model.Marca)
        @Html.ValidationMessageFor(model => model.Marca)
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.Modelo)
        @Html.EditorFor(model => model.Modelo)
        @Html.ValidationMessageFor(model => model.Modelo)
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.PrecioUnitario)
        @Html.EditorFor(model => model.PrecioUnitario)
        @Html.ValidationMessageFor(model => model.PrecioUnitario)
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.PorcentajeDescuento)
        @Html.EditorFor(model => model.PorcentajeDescuento)
        @Html.ValidationMessageFor(model => model.PorcentajeDescuento)
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.Estado)
        @Html.CheckBoxFor(model => model.Estado)
        @Html.ValidationMessageFor(model => model.Estado)
      </div>



      <div class="form-group">
        <input type="submit" value="Submit" class="btn button" />
        <input type="reset" value="Reset" class="btn button" />
      </div>
    }
  </div>


